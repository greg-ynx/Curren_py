<MyGridLayout>

    currency_1:currency_1
    currency_2:currency_2

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2

            Label:
                text: "Currency 1"
            TextInput:
                id: currency_1
                multiline:False

            Label:
                text: "Currency 2"
            TextInput:
                id: currency_2
                multiline:False

        Button:
            text: "Submit"
            on_press: root.press()
#:import utils kivy.utils
#:import os os
#:import img_dir config.definitions.img_dir
<Label>
    font_size:28

<Spinner>
    background_normal: ''
    background_color: '#003399'

<MainFrame>

    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#B7b6b6')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        padding:5
        spacing:5

        Label:
            text:''
            size_hint_y: None
            height:50

        Image:
            source:os.path.join(img_dir, 'curren_py_logo_star.png')
            allow_stretch: True
            keep_ratio: True

        Label:
            text:''
            size_hint_y: None
            height:50

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .3
            spacing:75
            padding: [50,0,50,0]
            Spinner:
                id: c1_spinner
                on_text: root.exchange(c1_spinner, self.text, c2_spinner.text)

            Spinner:
                id: c2_spinner
                on_text: root.exchange(c2_spinner, self.text, c1_spinner.text)

        Label:
            text:''
            size_hint_y: None
            height:20

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .3
            spacing:20
            padding: [20,0,20,0]
            TextInput:
                id: c1_text_input
                text: '1'
                font_size:28
                multiline: False
                on_text: root.lol(c1_text_input.id)
            TextInput:
                id: c2_text_input
                text: '1'
                font_size:28
                multiline: False
                on_text: root.lol(c2_text_input.id)

        Label:
            text:''
            size_hint_y: None
            height:20

        Label:
            id: exchange_rate_label
            text:''
